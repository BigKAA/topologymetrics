{
  "__inputs": [],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" }
  ],
  "annotations": { "list": [] },
  "description": "Текущее состояние сервисов и их зависимостей",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "asDropdown": false,
      "icon": "dashboard",
      "includeVars": true,
      "keepTime": true,
      "tags": [],
      "targetBlank": false,
      "title": "Services Status",
      "type": "link",
      "url": "/d/dephealth-services-status/"
    },
    {
      "asDropdown": false,
      "icon": "link",
      "includeVars": true,
      "keepTime": true,
      "tags": [],
      "targetBlank": false,
      "title": "Links Status",
      "type": "link",
      "url": "/d/dephealth-links-status/"
    }
  ],
  "panels": [
    {
      "id": 1,
      "title": "OK",
      "description": "Все зависимости доступны",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "green", "mode": "fixed" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] },
          "noValue": "0"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "targets": [
        {
          "expr": "count(min by (job, namespace) (app_dependency_health{namespace=~\"$namespace\", dependency=~\"$dependency\", type=~\"$dependency_type\", host=~\"$host\"}) == 1) or vector(0)",
          "legendFormat": "",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 2,
      "title": "Degraded",
      "description": "Часть зависимостей недоступна",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "orange", "mode": "fixed" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "orange", "value": null }] },
          "noValue": "0"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "targets": [
        {
          "expr": "count((min by (job, namespace) (app_dependency_health{namespace=~\"$namespace\", dependency=~\"$dependency\", type=~\"$dependency_type\", host=~\"$host\"}) == 0) and (max by (job, namespace) (app_dependency_health{namespace=~\"$namespace\", dependency=~\"$dependency\", type=~\"$dependency_type\", host=~\"$host\"}) == 1)) or vector(0)",
          "legendFormat": "",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 3,
      "title": "Broken",
      "description": "Все зависимости недоступны",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "red", "mode": "fixed" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }] },
          "noValue": "0"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "targets": [
        {
          "expr": "count(max by (job, namespace) (app_dependency_health{namespace=~\"$namespace\", dependency=~\"$dependency\", type=~\"$dependency_type\", host=~\"$host\"}) == 0) or vector(0)",
          "legendFormat": "",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 5,
      "title": "Состояние сервисов (timeline)",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 4 },
      "collapsed": false
    },
    {
      "id": 6,
      "title": "Состояние сервисов (только проблемные)",
      "description": "OK=2 (зелёный), Degraded=1 (оранжевый), Broken=0 (красный). Показаны только сервисы, имевшие проблемы за выбранный период.",
      "type": "state-timeline",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 5 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 0,
            "fillOpacity": 80
          },
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "green", "value": 2 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Broken", "color": "red" },
                "1": { "text": "Degraded", "color": "orange" },
                "2": { "text": "OK", "color": "green" }
              }
            }
          ],
          "links": [
            {
              "title": "Статус сервиса \u2192",
              "url": "/d/dephealth-service-status/?var-service=${__series.name}&${__url_time_range}",
              "targetBlank": false
            }
          ]
        },
        "overrides": []
      },
      "options": {
        "showValue": "auto",
        "mergeValues": true,
        "rowHeight": 0.8,
        "alignValue": "center",
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "(min by (job, namespace) (app_dependency_health{namespace=~\"$namespace\", dependency=~\"$dependency\", type=~\"$dependency_type\", host=~\"$host\"}) + max by (job, namespace) (app_dependency_health{namespace=~\"$namespace\", dependency=~\"$dependency\", type=~\"$dependency_type\", host=~\"$host\"})) and on(job, namespace) (min_over_time((min by (job, namespace) (app_dependency_health{namespace=~\"$namespace\", dependency=~\"$dependency\", type=~\"$dependency_type\", host=~\"$host\"}))[${__range}:15s]) < 1)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Сервисы и зависимости",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 20, "w": 24, "x": 0, "y": 13 },
      "targets": [
        {
          "expr": "min by (dependency, type, host, port, job, namespace) (app_dependency_health{namespace=~\"$namespace\", dependency=~\"$dependency\", type=~\"$dependency_type\", host=~\"$host\"})",
          "format": "table",
          "instant": true,
          "range": false,
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (dependency, type, host, port, job, namespace, le) (rate(app_dependency_latency_seconds_bucket{namespace=~\"$namespace\", dependency=~\"$dependency\", type=~\"$dependency_type\", host=~\"$host\"}[5m])))",
          "format": "table",
          "instant": true,
          "range": false,
          "refId": "B"
        },
        {
          "expr": "max by (dependency, type, host, port, job, namespace) (changes(app_dependency_health{namespace=~\"$namespace\", dependency=~\"$dependency\", type=~\"$dependency_type\", host=~\"$host\"}[15m]))",
          "format": "table",
          "instant": true,
          "range": false,
          "refId": "C"
        }
      ],
      "transformations": [
        { "id": "merge", "options": {} },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "namespace": true
            },
            "indexByName": {
              "job": 0,
              "dependency": 1,
              "type": 2,
              "host": 3,
              "port": 4,
              "Value #A": 5,
              "Value #B": 6,
              "Value #C": 7
            },
            "renameByName": {
              "job": "Сервис",
              "dependency": "Зависимость",
              "type": "Тип",
              "host": "Хост",
              "port": "Порт",
              "Value #A": "Статус",
              "Value #B": "P99 (сек)",
              "Value #C": "Flapping"
            }
          }
        },
        {
          "id": "sortBy",
          "options": {
            "fields": {},
            "sort": [{ "field": "Сервис", "desc": false }]
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Сервис" },
            "properties": [
              { "id": "custom.width", "value": 180 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Статус сервиса →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Зависимость" },
            "properties": [
              { "id": "custom.width", "value": 180 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Статус соединения →",
                    "url": "/d/dephealth-link-status/?var-dependency=${__value.text}&var-host=${__data.fields[\"Хост\"]}&var-port=${__data.fields[\"Порт\"]}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Тип" },
            "properties": [
              { "id": "custom.width", "value": 100 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Хост" },
            "properties": [
              { "id": "custom.width", "value": 220 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Порт" },
            "properties": [
              { "id": "custom.width", "value": 80 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Статус" },
            "properties": [
              { "id": "custom.width", "value": 100 },
              { "id": "custom.cellOptions", "value": { "type": "color-background", "mode": "basic" } },
              { "id": "color", "value": { "mode": "thresholds" } },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "red", "value": null },
                    { "color": "green", "value": 1 }
                  ]
                }
              },
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "P99 (сек)" },
            "properties": [
              { "id": "unit", "value": "s" },
              { "id": "decimals", "value": 3 },
              { "id": "custom.width", "value": 120 },
              { "id": "custom.cellOptions", "value": { "type": "color-text" } },
              { "id": "color", "value": { "mode": "thresholds" } },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "green", "value": null },
                    { "color": "yellow", "value": 0.1 },
                    { "color": "red", "value": 1 }
                  ]
                }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Flapping" },
            "properties": [
              { "id": "custom.width", "value": 100 },
              { "id": "custom.cellOptions", "value": { "type": "color-background", "mode": "basic" } },
              { "id": "color", "value": { "mode": "thresholds" } },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "green", "value": null },
                    { "color": "orange", "value": 4 },
                    { "color": "red", "value": 8 }
                  ]
                }
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "sortBy": [{ "displayName": "Сервис", "desc": false }],
        "footer": { "show": false }
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["dephealth"],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0,
        "label": "Datasource"
      },
      {
        "name": "namespace",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(app_dependency_health, namespace)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "hide": 0,
        "label": "Namespace"
      },
      {
        "name": "dependency_type",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(app_dependency_health{namespace=~\"$namespace\"}, type)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "hide": 0,
        "label": "Тип"
      },
      {
        "name": "dependency",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(app_dependency_health{namespace=~\"$namespace\", type=~\"$dependency_type\"}, dependency)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "hide": 0,
        "label": "Зависимость"
      },
      {
        "name": "host",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(app_dependency_health{namespace=~\"$namespace\", type=~\"$dependency_type\"}, host)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "hide": 0,
        "label": "Хост"
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "",
  "title": "dephealth: Service List",
  "uid": "dephealth-service-list",
  "version": 1
}
